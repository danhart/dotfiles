[core]
  excludesfile = ~/.gitignore

[user]
  name = Dan Hart
  email = danhart@notonthehighstreet.com

[alias]
  l = log --pretty=format:'%Cred[%h]%Creset %Cgreen(%cr) %C(cyan)%an: %Creset %s %C(yellow)%d%Creset' --abbrev-commit --date=relative
  st = status
  ci = commit
  co = checkout
  w = whatchanged
  smu = !git submodule foreach git checkout master && git submodule foreach git pull
  pick = cherry-pick
  ignore = !git update-index --assume-unchanged
  unignore = !git update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep ^[a-z]

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[github]
  user = danhart

[push]
  default = current

